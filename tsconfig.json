{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "include": [
    "src/types/declaration.d.ts"
  ],
  "outDir": "./dist/",
  "noImplicitAny": true,
  "module": "esnext",
  "target": "es5",
  "jsx": "react",
  "allowJs": true,
  "moduleResolution": "node",
  "checkJs": true,
  "allowSyntheticDefaultImports": true,
  "typeRoots": [
    "node_modules/@types",
    "src/types"
  ]
}